{
    "name": "@gjsify/esbuild-plugin-deno-loader",
    "version": "0.0.1",
    "description": "Deno module resolution for esbuild",
    "type": "module",
    "main": "dist/cjs/mod.cjs",
    "module": "dist/esm/mod.mjs",
    "types": "dist/types/mod.d.ts",
    "scripts": {
        "clear": "rm -rf dist",
        "print:name": "echo '@gjsify/esbuild-plugin-deno-loader'",
        "test": "node run-tests.mjs",
        "build": "yarn print:name && yarn build:js && yarn run build:types",
        "build:js": "node esbuild.mjs",
        "build:types": "tsc --emitDeclarationOnly || exit 0",
        "build:example": "node examples/bundle.mjs",
        "git:upstream:init": "git remote add upstream https://github.com/lucacasonato/esbuild_deno_loader.git || exit 0",
        "git:upstream:merge": "yarn git:upstream:init && git fetch upstream && git merge upstream/main"
    },
    "keywords": [
        "gjs",
        "deno",
        "esbuild",
        "loader"
    ],
    "devDependencies": {
        "esbuild": "^0.16.14",
        "typescript": "^5.0.0-dev.20230105"
    },
    "dependencies": {
        "@gjsify/esbuild-plugin-deepkit": "workspace:^",
        "deno-importmap": "^0.2.1"
    }
}
